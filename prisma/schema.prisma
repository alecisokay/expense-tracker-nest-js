generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash String
  firstName String?
  lastName String?

  @@map("users")
  tickets Tickets[]
}

model Tickets{
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    createdById Int
    user Users @relation(fields: [createdById], references: [id])

    createdBy String

    title String
    description String
    amount Int
    approvedBy String
    decided Boolean @default(false)

    @@map("tickets")

}
